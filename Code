print(" This is the symptom analyzer where it will help you find the most common symptoms, find conditions associated with a symptom, and the urgency of the symptom")

# Load the healthcare dataset
import pandas as pd

# This is a sample dataset - in a real project you might use NHS data or other medical databases
health_data = pd.DataFrame({
    'symptom': ['fever', 'cough', 'headache', 'rash', 'sore throat', 'fatigue'],
    'common_conditions': [
        'flu, cold, COVID-19',
        'cold, flu, asthma',
        'migraine, tension, dehydration',
        'allergy, eczema, measles',
        'strep throat, cold, tonsillitis',
        'anemia, depression, sleep disorder'
    ],
    'urgency': ['medium', 'low', 'low', 'medium', 'medium', 'low']
})

def symptom_analyzer():
    print("\nSymptom Analysis for Researchers")
    print("1. Show most common symptoms")
    print("2. Find conditions associated with a symptom")
    print("3. Show urgency levels")

    choice = input("Enter your choice (1-3): ")

    if choice == '1':
        print("\nMost common symptoms in our database:")
        print(health_data['symptom'].value_counts())
    elif choice == '2':
        symptom = input("Enter a symptom: ").lower()
        if symptom in health_data['symptom'].values:
            print(f"\nConditions associated with {symptom}:")
            print(health_data[health_data['symptom'] == symptom]['common_conditions'].values[0])
        else:
            print("Symptom not found.")
    elif choice == '3':
        print("\nSymptoms by urgency level:")
        print(health_data.groupby('urgency')['symptom'].apply(list))

symptom_analyzer()
